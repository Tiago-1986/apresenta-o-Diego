    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
            
            document.querySelectorAll('#mobile-menu a, nav a').forEach(link => {
                link.addEventListener('click', (e) => {
                    if (link.getAttribute('href').startsWith('#')) {
                        mobileMenu.classList.add('hidden');
                    }
                });
            });

            const header = document.getElementById('header');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    header.classList.add('py-2');
                    header.classList.remove('py-3');
                } else {
                    header.classList.add('py-3');
                    header.classList.remove('py-2');
                }
            });

            const caseStudiesData = {
                case1: {
                    labels: ['Redu√ß√£o de Custos', 'Aumento de Efici√™ncia', 'Precis√£o no Estoque', 'Agilidade na Entrega'],
                    data: [25, 35, 40, 30],
                    title: 'Resultados para a Ind√∫stria Varejista'
                },
                case2: {
                    labels: ['Redu√ß√£o de Custos', 'Aumento de Efici√™ncia', 'Precis√£o no Estoque', 'Agilidade na Entrega'],
                    data: [20, 45, 50, 40],
                    title: 'Resultados para E-commerce'
                },
                case3: {
                    labels: ['Redu√ß√£o de Custos', 'Aumento de Efici√™ncia', 'Precis√£o no Estoque', 'Agilidade na Entrega'],
                    data: [15, 25, 60, 20],
                    title: 'Resultados para o Setor Farmac√™utico'
                }
            };
            
            const ctx = document.getElementById('successChart').getContext('2d');
            let successChart;

            function renderChart(caseId) {
                const chartData = caseStudiesData[caseId];

                if (successChart) {
                    successChart.destroy();
                }

                successChart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: chartData.labels,
                        datasets: [{
                            label: 'Melhoria Percentual (%)',
                            data: chartData.data,
                            backgroundColor: [
                                'rgba(0, 127, 255, 0.6)',
                                'rgba(0, 51, 102, 0.6)',
                                'rgba(0, 127, 255, 0.4)',
                                'rgba(0, 51, 102, 0.4)',
                            ],
                            borderColor: [
                                'rgba(0, 127, 255, 1)',
                                'rgba(0, 51, 102, 1)',
                                'rgba(0, 127, 255, 1)',
                                'rgba(0, 51, 102, 1)',
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: false
                            },
                            title: {
                                display: true,
                                text: chartData.title,
                                font: {
                                    size: 18,
                                    family: "'Montserrat', sans-serif"
                                },
                                color: '#003366'
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Melhoria (%)'
                                }
                            }
                        }
                    }
                });
            }

            const caseStudyButtons = document.querySelectorAll('.case-study-btn');
            caseStudyButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const caseId = button.dataset.case;
                    renderChart(caseId);
                    
                    caseStudyButtons.forEach(btn => {
                        btn.classList.remove('bg-[#007FFF]', 'text-white');
                        btn.classList.add('bg-gray-200', 'text-gray-700');
                    });
                    
                    button.classList.add('bg-[#007FFF]', 'text-white');
                    button.classList.remove('bg-gray-200', 'text-gray-700');
                });
            });

            renderChart('case1');
        });
    </script>

